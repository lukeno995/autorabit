            <apex:includeScript value="{!URLFOR($Resource.ENELfiles, 'ENELfiles/EnelStylesheets/files/vendor/bootstrap/js/bootstrap.min.js')}"/>
            
        </body>
        <script>
        
        $(document).ready(function() {
            $("#empty").hide();
            });
            

            function doSearchKit() {
                
                //var kit = $("elencoKit").val("val2");
                var kit = $("[id$='selectKit']").val();
                
                if(kit == "")
                {
                    alert('Selezionare un KIT!!');
                }
                else
                {
                    searchKit(kit);
                }
            }
            
            
      </script>
    </html>
</apex:page>