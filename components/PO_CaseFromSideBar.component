                                                    <div class="col-lg-6 col-offset-6">
                                                    </div>
                                                    
                                                    <div class="col-lg-6 col-offset-6">
                                                        <apex:commandButton styleClass="btn btn-primary" value="Annulla" style="margin-right:10px;" action="{!DeleteParentCase}" immediate="true"
                                                                         html-formnovalidate="formnovalidate"/> 
     
                                                        <apex:commandButton styleClass="btn btn-primary" value="Inserisci Collegamento" action="{!childcase}" /> 
                                                    </div>
                                                </div>
                                            </div>
                                        </apex:form>    
                                        
                                        <br/>
                                    </div>
                                    <!-- /.row (nested) -->
                                </div>
                                <!-- /.panel-body -->
                            </div>       
                            <!-- /.col-lg-4 -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /#page-wrapper -->
                    
                </div>
