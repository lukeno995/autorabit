		                        <div class="panel-body">
			                        <fieldset class="form-group">   
				                        <div class="form-group">
				                            <div class="col-lg-6">
    	                                         <label>Codice VLAN : </label> &nbsp; &nbsp;
    	                                         <apex:outputField id="cod_Vlan" styleClass="form-control"  value="{!slV.name}" />
