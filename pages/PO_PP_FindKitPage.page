                                                    <div class="form-group">
                                                        <div class="col-lg-6 col-offset-4">
    										                <button type="button" Class="btn btn-primary" style="margin-top: 24px;" onclick="doSearchKit()">
    										                    Inserisci VLAN
    										                 </button>
                                                        </div>
                                                    </div> 
                                                </apex:outputPanel>
                                            </div>
                                            
                                            <apex:actionRegion >
                                                <apex:actionFunction name="searchKit" action="{!runSearchKit}"/>
