        </head> 
        <body>
           
            <div id="wrapper">
                <!-- Navigation -->
                <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
                    <c:PO_SideBarComponent /> 
                    <div class="navbar-default sidebar" role="navigation">
                        <div class="sidebar-nav navbar-collapse">
                            <ul class="nav" id="side-menu">
                            </ul>
                        </div>
                        <!-- /.sidebar-collapse -->
                    </div>
                    <!-- /.navbar-static-side -->
                </nav>
                
                <div id="page-wrapper">
                    <div class="row">
                        <div>
                            <div class="panel panel-default" style="width:73.666667%;">
                                <div class="panel-heading">
                                    <i></i>Ricerca Kit
                                </div>
                                <div class="panel-body">
                                    <div class="row">
                                        <apex:form styleClass="form-horizontal" id="formID" >  
                                        <!--<form>-->
             
                                            <div class="container">
                                                <div class="form-group">
                                                     <!--<div class="col-sm-4">
                                                        <!--<apex:outputLabel value="Inserisci il nome del Kit da ricercare:"/>
                                                        <apex:inputText required="true" styleClass="form-control" value="{!nameKit}" id="nomeKit"/>
                                                        -->
                                                        <p style='margin-left:15px;' id="noKit">
                                                            <apex:outputText id="valKit1" rendered="{!noKit}" value="Non esiste alcun KIT a sistema per l'OLO {!codOp}" style="color:red;"/>
                                                        </p>
                                                        <p style='margin-left:15px;' id="invalidKit">
