<apex:page controller="PO_TP_AggiungiAllegatoController" docType="html-5.0" applyhtmltag="false" showheader="false" sidebar="false" standardstylesheets="false">
    <html lang="en">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>Open Fiber</title>

        <!-- Bootstrap Core CSS -->
        <apex:stylesheet value="{!URLFOR($Resource.ENELfiles, 'ENELfiles/EnelStylesheets/files/vendor/bootstrap/css/bootstrap.min.css')}"
        />

        <!-- MetisMenu CSS -->
        <apex:stylesheet value="{!URLFOR($Resource.ENELfiles, 'ENELfiles/EnelStylesheets/files/vendor/metisMenu/metisMenu.min.css')}"
        />

        <!-- Custom CSS -->
        <apex:stylesheet value="{!URLFOR($Resource.ENELfiles, 'ENELfiles/EnelStylesheets/files/dist/css/sbadmin2.css')}"
        />

        <!-- Morris Charts CSS -->
        <apex:stylesheet value="{!URLFOR($Resource.ENELfiles, 'ENELfiles/EnelStylesheets/files/vendor/morrisjs/morris.css')}"
        />

        <!-- Custom Fonts -->
        <apex:stylesheet value="{!URLFOR($Resource.ENELfiles, 'ENELfiles/EnelStylesheets/files/vendor/fontawesome/css/fontawesome.min.css')}"
        />

        <style>
            .navbar {
                min-height: 105px;
            }
            
            .navbar-header {
                float: none;
            }
            
            .navbar-default {
                background-color: #ffffff;
            }
            
            .panel-default > .panel-heading {
                color: #ffffff;
                background-color: #337ab7;
            }
            
            span.dateFormat {
                display: none;
            }
            
            .red {
                color: red;
            }
            
            .form-check-input {
                margin-left: 45px !important;
                margin-top: 10px;
            }
            
            .ChooseFileContainer {
                position: relative;
                display: inline;
            }
            /*Styling for the custom button that would overlay on top of the standard choose file button */
            
            .OverlayButton {
                position: absolute;
                left: 5px;
                right: 0;
            }

        </style>
    </head>

    <body>
        <div id="wrapper">
            <!-- Navigation -->
            <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
                <c:PO_SideBarComponent />
                <div class="navbar-default sidebar" role="navigation">
                    <div class="sidebar-nav navbar-collapse">
                        <ul class="nav" id="side-menu"></ul>
                    </div>
                <!-- /.sidebar-collapse -->
                </div>
                <!-- /.navbar-static-side -->
            </nav> 
            
            <div id="page-wrapper">
            <div class="row">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i></i>Inserisci allegato
                    </div>
                    <apex:form enctype="multipart/form-data">
                        <!-- <div style="color:red;" id="showerror"> -->
                        <apex:Messages id="errors" style="color:red;" />
                        <!--  </div> -->
                        <!--  <form role="form" class="form-horizontal">-->
                        <!-- <div class="form-group"> -->
                        <div class="col-lg-6">
                            <apex:pageBlock >
                                <div class="col-lg-6" style="margin-top:10px;">
                                    <div class="ChooseFileContainer">
                                        <apex:inputFile value="{!fileBody}" filename="{!fileName}" style="width:100%"
                                            id="fileToUpload" lang="it" /> 
                                    </div>
                                </div>
                                <div class="col-lg-6 col-offset-6">
                                    <apex:commandButton action="{!uploadAttach}" value="Upload File" id="theButton"
                                        styleClass="btn btn-primary" style="margin-top:10px;" />&nbsp;&nbsp;
                                </div>
                                <!--PG - 01-10 - CR-13 - END -->
                                <apex:outputPanel rendered="{!showAllegati}">
                                    <div class="col-lg-18">
                                        <label>Allegati : </label> &nbsp; &nbsp; <br/>
                                        <apex:repeat value="{!lista_allegati}" var="allegato" id="theRepeat">
                                            <apex:outputText value="{!allegato.name}" id="attach" style="color: red;font-weight: bold;"/><br/>
                                        </apex:repeat> 
                                    </div>
                                </apex:outputPanel> 
                                <!--PG - 01-10 - CR-13 - END -->
                                <apex:pageBlockSection >
                                </apex:pageBlockSection>
                                <br/>
                                <apex:pageBlockButtons location="bottom">
                                    <div class="col-lg-6">
                                        <apex:commandButton action="{!annulla}" value="Annulla" id="theButton3" 
                                            styleClass="btn btn-primary" style="margin-top:10px;"/>
                                    </div>
                                    <div class="col-lg-6">
                                        <apex:commandButton action="{!goToRiepilogoRichiesta}" value="Riepilogo Richiesta" id="ric_ins" 
                                            styleClass="btn btn-primary" style="margin-top:10px;"/>
                                    </div>
                                </apex:pageBlockButtons>
                            </apex:pageBlock>
                        </div>
                        
                       
                        <!--</div> -->
                        <!-- </form> -->
                    </apex:form>
                </div>
            </div>
        </div>
        </div>
        <script>

            $(function() {
                // script that triggers the click of the standard
                // choose file button 
                $('#CustomChooseFileButton').click(function(e) {
                    $('input[type="file"]').click();
                });
                // script to hide the blinking cursor
                $('input[type="text"]').mousedown(function(e) {
                    e.preventDefault();
                    $(this).blur();
                    return false;
                });
            });

        </script>
    
    </body>

    </html>

</apex:page>