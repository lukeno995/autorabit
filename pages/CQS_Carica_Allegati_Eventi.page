<apex:page standardController="OF_CQS_Evento__c" extensions="CQS_Allegato_customController" showHeader="false">

 <apex:form id="form_Upload">
 <apex:pageBlock >

 <apex:pageBlockButtons >
   <apex:commandButton action="{!back}" value="Back to {!OF_CQS_Evento__c}"/>
   <apex:commandButton action="{!cancel}" value="Cancel"/>
 </apex:pageBlockButtons>
 <apex:pageMessages />
 
  <apex:pageBlockSection columns="1">
  

    <apex:pageBlockSectionItem >
      <apex:outputLabel value="File" for="file_File"/>
      <apex:inputFile id="file_File" value="{!fileBody}" filename="{!fileName}"/>
    </apex:pageBlockSectionItem>
  
  
    <apex:pageBlockSectionItem >
      <apex:outputLabel value="Tipo Allegato" for="type"/>
      <apex:selectList value="{!selectedType}" size="1" id="type"> 
        <apex:selectOption itemValue=" -------- " itemLabel=" -------- "/>
        <apex:selectOption itemValue="Documento Pre Ripristino" itemLabel="Documento Pre Ripristino"/>
        <apex:selectOption itemValue="Documento Post Ripristino" itemLabel="Documento Post Ripristino"/>
        <apex:selectOption itemValue="Verbale Rilascio Ente Gestore" itemLabel="Verbale Rilascio Ente Gestore"/>
        <apex:selectOption itemValue="Altro" itemLabel="Altro"/>
      </apex:selectList>
    </apex:pageBlockSectionItem>
    
   
    
    <apex:pageBlockSectionItem >
      <apex:outputLabel value="" for="uploadBtn"/> 
      <apex:commandButton id="uploadBtn" value="Attach File" action="{!processUpload}" />
    </apex:pageBlockSectionItem>    
    
  </apex:pageBlockSection>
 
 </apex:pageBlock>


 </apex:form>

</apex:page>