            <style>
                .navbar {
                min-height: 105px;
                }
                .navbar-header {
                float: none;
                }
                .navbar-default {
                background-color: #ffffff;
                }
                .panel-default>.panel-heading {
                color: #ffffff;
                background-color: #337ab7;
                }
                span.dateFormat{
                
                display:none;
                
                }
                .red{color:red;}
                .form-check-input{ 
                margin-left: 45px !important;
                margin-top: 10px;
                }
                
            </style>
        </head> 
         
            <body>
            <apex:form >
                <div class="panel panel-default">
                    <div class="panel-heading">
		                <apex:outputPanel rendered="{!!confirmPage}">
		                
		                        <i></i>Bozza Richiesta
		                   
		                </apex:outputPanel>
		                <apex:outputPanel rendered="{!AND(confirmPage,!error,!success)}">
		                    
		                        <i></i>Conferma Richiesta
		                   
		                </apex:outputPanel>
		                <apex:outputPanel rendered="{!OR(error,success)}">
		                    
		                        <i></i>Risultato Inoltro
		                   
		                </apex:outputPanel>
                	</div>
	                <div class="panel-body">
	                <apex:actionStatus id="actStatusId" >
								               <apex:facet name="start">
    <div style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; opacity: 0.25; z-index: 1000; background-color: black;">
        &nbsp;
    </div>
    <div style="position: fixed; left: 0; top: 0; bottom: 0; right: 0; z-index: 1001; margin: 15% 50%">
        <div style="display: inline-block; padding: 2px; background-color: #fff; width: 125px;">
            <img src="/img/loading.gif" style="float: left; margin: 8px;" />
            <span style="display: inline-block; padding: 10px 0px;">Please Wait...</span>
        </div>
    </div>
    </apex:facet>
								           </apex:actionStatus>       
	                    <div class="row">
	                        <div style="color:red;" id="showerror">
	                            <apex:pageMessages id="errors" /> 
	                        </div>
	                        <apex:outputPanel rendered="{!error}" >
		                    <div class="panel-heading red" >
		                        <i></i>Richiesta errata: {!motivoErr}
		                   </div>
		                </apex:outputPanel>
		                <apex:outputPanel rendered="{!success}" >
		                    <div class="panel-heading red" >
		                        <i></i>Richiesta Inserita Correttamente
		                   </div>
		                </apex:outputPanel>
	                            
	                        <form role="form" class="form-horizontal">
	                            <fieldset class="form-group">
	                                 <div class="form-group">
	                                   
	                                     <div class="col-lg-6">
	                                         <label>Codice Ordine Operatore : </label> &nbsp; &nbsp;
	                                         <apex:outputField id="CodiceOrdineOLO" styleClass="form-control" value="{!sl.EOF_Codice_Ordine_OLO__c}" />
	                                     </div>
	                                     <div class="col-lg-6">
	                                         <label>Nome Referente Tecnico Operatore : </label> &nbsp; &nbsp;
	                                         <apex:outputField id="NomeReferenteTecnicoOLO" styleClass="form-control" value="{!sl.EOF_NOME_REFERENTE_TECNICO_OLO__c}"/>
	                                     </div>
	                                     <div class="col-lg-6">
	                                        <label>Cognome Referente Tecnico Operatore :</label> &nbsp; &nbsp;
	                                        <apex:outputField id="CognomeReferenteTecnicoOLO" styleClass="form-control" value="{!sl.EOF_COGNOME_REFERENTE_TECNICO_OLO__c}"/>
	                                      </div>                                                                                                                                                    
	                                                                                    
	                                     <div class="col-lg-6">
	                                        <label> Telefono Referente Tecnico Operatore :</label> &nbsp; &nbsp;
	                                        <apex:outputField id="TelefonoReferenteTecnicoOLO" styleClass="form-control" value="{!sl.EOF_TELEFONO_REFERENTE_TECNICO_OLO__c }"/>
	                                     </div>
	                                     <div class="col-lg-6">
	                                         <label>Email Referente Tecnico Operatore : </label> &nbsp; &nbsp;
	                                         <apex:outputField id="EmailReferenteTecnicoOLO" styleClass="form-control"  value="{!sl.EOF_EMAIL_REFERENTE_TECNICO_OLO__c}" />
	                                     </div> 
	                                 
	                                 <div class="col-lg-6">
	                                     <label>Telefono Referente Operatore Onfield Notech : </label> &nbsp; &nbsp;
	                                     <apex:outputField id="TelefonoReferenteOLOOnfieldNotech" styleClass="form-control"  value="{!sl.EOF_Telefono_Referente_OLO_Onfield_Notec__c }"/>
	                                 </div>
	                                 
	                                     <div class="col-lg-6">
	                                          <label>Nome Cliente : </label> &nbsp; &nbsp;
	                                          <apex:outputField id="NomeCliente" styleClass="form-control"  value="{!sl.EOF_Nome_Cliente__c}"/>
	                                     </div> 
	                                     <div class="col-lg-6">
	                                         <label>Cognome Cliente : </label> &nbsp; &nbsp;
	                                         <apex:outputField id="CognomeCliente" styleClass="form-control" value="{!sl.EOF_COgnome_CLiente__c}"/>
	                                     </div>
	                                 
	                                 
	                                 
	                                     
	                                     <div class="col-lg-6">
	                                          <label>Recapito Telefonico Cliente 1 : </label> &nbsp; &nbsp;
	                                          <apex:outputField id="RecapitoTelefonicoCliente1" styleClass="form-control" value="{!sl.EOF_RECAPITO_TELEFONICO_CLIENTE_1__c}"/>
	                                     </div> 
	                                     <div class="col-lg-6">
	                                         <label>Recapito Telefonico Cliente 2 : </label> &nbsp; &nbsp;
	                                         <apex:outputField id="RecapitoTelefonicoCliente2" styleClass="form-control"  value="{!sl.EOF_RECAPITO_TELEFONICO_CLIENTE_2__c}"/>
	                                     </div>
	                                
	                                     <div class="col-lg-6">
	                                          <label>Informazioni Logistica Apparati : </label> &nbsp; &nbsp;
	                                          <apex:outputField id="InformazioniLogisticaApparati" styleClass="form-control"   value="{!sl.EOF_INFORMAZIONI_LOGISTICA_APPARATI__c}"/>
	                                     </div> 
	                                     <div class="col-lg-6"> 
	                                         <label>Data Prevista Attivazione :  </label> &nbsp; &nbsp;
	                                
	                                         <apex:outputField styleClass="form-control" id="EOFDataPrevistaAttivazione" value="{!sl.EOF_DATA_PREVISTA_ATTIVAZIONE__c}"   />
	                                            
	                                     </div>
	                                 
	                                     
	                                     <div class="col-lg-6">
	                                          <label>Orario Appuntamento :</label> &nbsp; &nbsp;
	                                          <apex:outputField id="OrarioAppuntamento" styleClass="form-control"  value="{!sl.EOF_ORARIO_APPUNTAMENTO__c}"/>
	                                     </div> 
	                                     <div class="col-lg-6">
	                                         <label>Codice Progetto Speciale : </label> &nbsp; &nbsp;
	                                         <apex:outputField id="CodiceProgettoSpeciale" styleClass="form-control"  value="{!sl.EOF_CODICE_PROGETTO_SPECIALE__c}"/>
	                                     </div>
	                                 
	                                     
	                                     <div class="col-lg-6">
	                                          <label>Promozione : </label> &nbsp; &nbsp;
	                                          <apex:outputField id="Promozione" styleClass="form-control"  value="{!sl.EOF_PROMOZIONE__c}"/>
	                                     </div> 
	                                     <div class="col-lg-6">
	                                         <label>Cluster Promozione : </label> &nbsp; &nbsp;
	                                         <apex:outputField id="ClusterPromozione" styleClass="form-control"  value="{!sl.EOF_CLUSTER_PROMOZIONE__c}"/>
	                                     </div>
	                                 
	                                     
	                                     <div class="col-lg-6">
	                                          <label>Note : </label> &nbsp; &nbsp;
	                                          <apex:outputField id="Note" styleClass="form-control"  value="{!sl.EOF_NOTE__c}"/>
	                                     </div>
	                                     <div class="col-lg-6">
	                                         <label>ID Building : </label> &nbsp; &nbsp;
	                                         <apex:outputField id="EOFIDBuilding" styleClass="form-control" value="{!sl.EOF_ID_BUILDING__c}"/>
	                                     </div>
	                                 
	                                     
	                                     <div class="col-lg-6">
	                                          <label>Scala Palazzina : </label> &nbsp; &nbsp;
	                                          <apex:outputField id="ScalaPalazzina" styleClass="form-control" value="{!sl.EOF_SCALA_PALAZZINA__c}"/>
	                                     </div>
	                                     <div class="col-lg-6">
	                                         <label>Numero Telefonico Principale Linea : </label> &nbsp; &nbsp;
	                                         <apex:outputField id="NumeroTelefonicoPrincipaleLinea" styleClass="form-control" value="{!sl.EOF_NUMERO_TELEFONICO_PRINCIPALE_LINEA__c}"/>
	                                     </div>
	                                 
	                                     
	                                     <div class="col-lg-6">
	                                          <label>Recapito Test Linea :  </label> &nbsp; &nbsp;
	                                          <apex:outputField id="RecapitoTestLinea" styleClass="form-control"  value="{!sl.EOF_RECAPITO_TEST_LINEA__c}"/>
	                                     </div> 
	                                     <div class="col-lg-6">
	                                         <label>Identificativo del POP :</label> &nbsp; &nbsp;
	                                         <apex:outputField id="IdentificativodelPOP" styleClass="form-control" value="{!sl.EOF_ID_Pop__c}"/>
	                                     </div>
	                                 
	                                     
	                                     <div class="col-lg-6">
	                                          <label>Profilo :  </label> &nbsp; &nbsp;
	                                          <apex:outputField id="Profilo" styleClass="form-control" value="{!sl.EOF_PROFILO__c}"/>
	                                     </div>
	                                     <div class="col-lg-6">
	                                          <label>Profilo Commerciale :  </label> &nbsp; &nbsp;
	                                          <apex:outputText id="ProfiloCommerciale" styleClass="" value="{!profiloCommerciale}"/>
	                                     </div> 
	                                     
	                                 </div>
	                             </fieldset>
	                             <apex:outputPanel rendered="{!OR(!confirmPage,error)}">
	                                 <div class="col-lg-6">
	                                     <div class="btn-group" role="group" aria-label="Basic example">                                      
	                                         <apex:commandButton styleClass="btn btn-primary" style="margin-right:10px; margin-top:10px;" value="Modifica" action="{!editsl}"/>        
	                                     </div>
	                                 </div>  
	                             </apex:outputPanel>
	                        </form>
	                    </div>
	                
	                                
	                                
	                    <!-- Iterazione Lista VLAN       -->                
	                    <apex:repeat value="{!slVLAN}" var="slV" rendered="{!VLAN}">
	                        <div class="panel panel-default" style="margin-top:10px;">
		                        <div class="panel-heading">
		                            <i></i>VLAN:
		                        </div>
		                        <div class="panel-body">
	                    		   
			                        <fieldset class="form-group">   
				                        <div class="form-group">
				                            <div class="col-lg-6">
				                                <label>Kit Consegna VLAN : </label> &nbsp; &nbsp;
				                                <apex:outputField id="CodiceOrdineOLO" styleClass="form-control" value="{!slV.OF_SA_KIT_CONSEGNA_VLAN__c}"  />
				                            </div>
				                            <div class="col-lg-6">
				                                <label>User VLAN : </label> &nbsp; &nbsp;
				                                    <apex:outputField styleClass="form-control" id="userVLAN" value="{!slV.OF_SA_USER_VLAN__c}"    />                
				                            </div>
				                            <div class="col-lg-6">
				                                <label>Service VLAN : </label> &nbsp; &nbsp;
				                                <apex:outputField id="serviceVLAN" styleClass="form-control" value="{!slV.OF_SA_SERVICE_VLAN__c}"  />
				                             </div>
				                             <div class="col-lg-6">
				                                 <label>Profilo VLAN : </label> &nbsp; &nbsp;
				                                 <apex:outputField id="profiloVLAN" styleClass="form-control" value="{!slV.OF_SA_PROFILO_VLAN__c}"   />
				                             </div>
				                             <div class="col-lg-6">
				                                <label>Customer VLAN :</label> &nbsp; &nbsp;
				                                 <apex:outputField id="customerVLAN" styleClass="form-control" value="{!slV.OF_SA_CUSTOMER_VLAN__c}"/>
				                              </div>                                                                                                                                                                                                   
				                             <div class="col-lg-6">
				                                 <label>Modello Di Servizio VLAN : </label> &nbsp; &nbsp;
				                                 <apex:outputField id="modelloServizioVLAN" styleClass="form-control"  value="{!slV.OF_SA_MODELLO_DI_SERVIZIO_VLAN__c}"/>
				                             </div>
				                             <div class="col-lg-6"> 
				                                <label> Informazioni VLAN :</label> &nbsp; &nbsp;
				                                <apex:outputField id="informazioniVLAN" styleClass="form-control" value="{!slV.OF_SA_INFORMAZIONI_VLAN__c}"/>
				                             </div>
				                              
				                         </div>
			                         </fieldset>
			                         <apex:outputPanel rendered="{!OR(!confirmPage,error)}">
			                             
		                                 <div class="col-lg-6">
		                                     <div class="btn-group" role="group" aria-label="Basic example">                                      
		                                         <apex:commandButton styleClass="btn btn-primary" style="margin-right:10px; margin-top:10px;" value="Elimina VLAN" action="{!deleteVLAN}" rerender="block">  
		                                            <apex:param name="eventVLAN" value="{!slV.Id}" assignTo="{!idVLAN}"/>  
		                                        </apex:commandButton>       
		                                     </div>
		                                 </div>
		                                 <div class="col-lg-6">
		                                     <div class="btn-group" role="group" aria-label="Basic example">                                      
		                                         <apex:commandButton styleClass="btn btn-primary" style="margin-right:10px; margin-top:10px;" value="Modifica VLAN" action="{!editVLAN}" rerender="block">
		                                            <apex:param name="eventVLAN" value="{!slV.Id}" assignTo="{!idVLAN}"/>
		                                        </apex:commandButton>        
		                                     </div>
		                                 </div>     
			                             
			                         </apex:outputPanel>
		                         
		                         </div>
	                        </div>
	                    </apex:repeat> 
	                     
	                    <!-- Iterazione Lista Apparati      -->
	                    <apex:repeat value="{!slApparati}" var="slApp" rendered="{!Apparati}">
	                        <div class="panel panel-default">
		                        <div class="panel-heading">
		                            <i></i>Apparato:
		                        </div>  
		                        <div class="panel-body"> 
			                        <fieldset class="form-group">   
				                        <div class="form-group">
				                            <div class="col-lg-6">
				                                <label>Tipologia Apparato : </label> &nbsp; &nbsp;
				                                <apex:outputField id="TipologiaApparato" styleClass="form-control" value="{!slApp.EOF_TIPOLOGIA_APPARATO__c}"  />
				                            </div>
				                            <div class="col-lg-6">
				                                <label>Password Apparato : </label> &nbsp; &nbsp;
				                                    <apex:outputField styleClass="form-control" id="passwordApparato" value="{!slApp.OF_SA_PASSWORD_APPARATO__c}"    />                
				                            </div>
				                            <div class="col-lg-6">
				                                <label>Azione Apparato : </label> &nbsp; &nbsp;
				                                <apex:outputField id="AzioneApparato" styleClass="form-control" value="{!slApp.OF_SA_AZIONE_APPARATO__c}"  />
				                             </div> 
				                         </div>
			                         </fieldset>
				                         <apex:outputPanel rendered="{!OR(!confirmPage,error)}">
				                             
			                                 <div class="col-lg-6">
			                                     <div class="btn-group" role="group" aria-label="Basic example">                                      
			                                         <apex:commandButton styleClass="btn btn-primary" style="margin-right:10px; margin-top:10px;" value="Elimina Apparato" action="{!deleteApparato}" rerender="block">  
			                                            <apex:param name="eventApparato" value="{!slApp.Id}" assignTo="{!idApparato}"/>  
			                                        </apex:commandButton>       
			                                     </div>
			                                 </div>
			                                 <div class="col-lg-6">
			                                     <div class="btn-group" role="group" aria-label="Basic example">                                      
			                                         <apex:commandButton styleClass="btn btn-primary" style="margin-right:10px; margin-top:10px;" value="Modifica Apparato" action="{!editApparato}" rerender="block"> 
			                                            <apex:param name="eventApparato" value="{!slApp.Id}" assignTo="{!idApparato}"/>  
			                                        </apex:commandButton>       
			                                     </div>
			                                 </div>     
				                             
				                         </apex:outputPanel>
				                       
		                       		</div>
	                       </div>
	                    </apex:repeat>
	                    
	                    <!-- Iterazione Lista Servizi Aggiuntivi       -->
	                    <apex:repeat value="{!SlServiziAggiuntivi}" var="slSA" rendered="{!ServiziAggiuntivi}">
	                        <div class="panel panel-default">
		                        <div class="panel-heading">
		                            <i></i>Servizio Aggiuntivo:
		                        </div>  
		                        <div class="panel-body"> 
			                        <fieldset class="form-group">     
				                        <div class="form-group">
				                            <div class="col-lg-6">
				                                <label>Nome Servizio : </label> &nbsp; &nbsp;
				                                <apex:outputField id="NomeServizio" styleClass="form-control" value="{!slSA.OF_SA_NOME_SERVIZIO__c}"  />
				                            </div>
				                            <div class="col-lg-6">
				                                <label>Informazioni Servizio : </label> &nbsp; &nbsp;
				                                    <apex:outputField styleClass="form-control" id="InformazioniServizio" value="{!slSA.OF_SA_INFORMAZIONI_SERVIZIO__c}"    />                
				                            </div>
		                             
				                         </div>
			                         </fieldset>
		                         <apex:outputPanel rendered="{!OR(!confirmPage,error)}">
		                              
		                                 <div class="col-lg-6">
		                                     <div class="btn-group" role="group" aria-label="Basic example">                                      
		                                         <apex:commandButton styleClass="btn btn-primary" style="margin-right:10px; margin-top:10px;" value="Elimina Servizio Aggiuntivo" action="{!deleteServAgg}" rerender="block">  
		                                            <apex:param name="eventServAgg" value="{!slSA.Id}" assignTo="{!idServAgg}"/>  
		                                        </apex:commandButton>       
		                                     </div>
		                                 </div>
		                                 <div class="col-lg-6">
		                                     <div class="btn-group" role="group" aria-label="Basic example">                                      
		                                         <apex:commandButton styleClass="btn btn-primary" style="margin-right:10px; margin-top:10px;" value="Modifica Servizio Aggiuntivo" action="{!editServAgg}" rerender="block"> 
		                                            <apex:param name="eventServAgg" value="{!slSA.Id}" assignTo="{!idServAgg}"/>  
