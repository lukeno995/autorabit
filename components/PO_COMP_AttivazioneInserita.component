	                       </div>
                          
		                       <div class="col-lg-6" >
		                           <div class="btn-group" role="group" aria-label="Basic example">                                      
		                               <apex:commandButton styleClass="btn btn-primary" value="Conferma Inoltro" style="margin-right:10px; margin-top:10px;" action="{!inoltraRequest}" status="actStatusId"/>
								           
		                           </div>
		                       </div> 
	                       
