                                                        </p>

                                                    <!--</div>-->
                                                    <apex:outputPanel rendered="{!hideElements}">
                	                                    <div class="col-sm-4">                                                        
                                                             <label>Elenco Kit :</label>                                                    
                                         	                 <apex:selectList required="true" id="elencoKit" size="1" styleClass="form-control" value="{!nameKit}" >
                                                    			<apex:selectOptions value="{!elencoKit}" />
                                                    			<apex:actionSupport event="onchange" reRender="selectKit" action="{!passSelectValueToController}"/>
                                                    		 </apex:selectList>
                                                    		 <apex:inputHidden value="{!selectednameKit}" id="selectKit" />
                                                        </div>
                                                     </apex:outputPanel>
                                                </div>
